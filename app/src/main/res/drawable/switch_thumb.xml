<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp">
                <shape>
                     <gradient
                        android:startColor="#DDD"
                        android:centerColor="#0000FF"
                        android:endColor="#0090FF"
                        android:angle="-90" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp">
                <shape>
                     <gradient
                        android:startColor="#ff0000"
                        android:centerColor="#FF0000"
                        android:endColor="#FFDD00"
                        android:angle="-90" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>